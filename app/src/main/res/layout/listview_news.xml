<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc56363"
    android:orientation="vertical"
    android:paddingBottom="@dimen/listview_news_padding"
    android:paddingLeft="@dimen/listview_news_padding"
    android:paddingRight="@dimen/listview_news_padding"
    android:paddingTop="@dimen/listview_news_padding">

    <TextView
        android:id="@+id/newsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="News Site Name"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/newsUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="News Site URL"
        android:textColor="#ffdddddd" />

</LinearLayout>